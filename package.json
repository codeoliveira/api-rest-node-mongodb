{
	"name": "api-rest-node-mongodb",
	"version": "1.0.0",
	"description": "A simple project to training api rest with node and mongodb",
	"main": "dist/main.js",
	"scripts": {
		"dev-ts": "./node_modules/typescript/bin/tsc -w",
		"dev-node": "node_modules/nodemon/bin/nodemon.js",
		"test": "ts-node jest.startup.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/codeoliveira/api-rest-node-mongodb.git"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"jest": {
		"globals": {
			"testURL": "http://localhost:3001"
		},
		"testEnvironment": "node",
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	},
	"bugs": {
		"url": "https://github.com/codeoliveira/api-rest-node-mongodb/issues"
	},
	"homepage": "https://github.com/codeoliveira/api-rest-node-mongodb#readme",
	"dependencies": {
		"bcrypt": "5.0.0",
		"jsonwebtoken": "8.1.1",
		"mongoose": "4.13.9",
		"node-typescript": "^0.1.3",
		"nodemon": "1.14.7",
		"pm2": "^4.4.0",
		"restify": "6.3.4",
		"restify-errors": "5.0.0",
		"serve-favicon": "^2.5.0"
	},
	"devDependencies": {
		"@types/bcrypt": "1.0.0",
		"@types/jest": "22.1.2",
		"@types/jsonwebtoken": "7.2.5",
		"@types/mongoose": "4.7.32",
		"@types/restify": "5.0.6",
		"@types/restify-errors": "4.3.2",
		"@types/supertest": "2.0.4",
		"jest": "22.4.2",
		"jest-cli": "22.4.2",
		"supertest": "3.0.0",
		"ts-jest": "22.0.4",
		"ts-node": "5.0.1",
		"typescript": "2.6.2"
	}
}
